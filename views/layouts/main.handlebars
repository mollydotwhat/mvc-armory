    <!--loadout-->
    <div class="card-loadout" id="loadout-id">
      <h1>Loadout</h1>
      <div class="slot" id="head_slot">
        <h5>Iron Bucket</h5>
        <img src=" ../assets/images/items/helmets/helmet1.png">
        <div class="card-values">
          <span class="healthClass">0</span>
          <span class="armorClass">0</span>
          <span class="attackClass">0</span>
          <span class="defenseClass">0</span>
          <span class="speedClass">0</span>
        </div>
      </div>
      <div class="slot" id="torso_slot">
        <h5>Leather Tunic</h5>
        <img src="../assets/images/items/armors/armor1.png">
        <div class="card-values">
          <span class="healthClass">2</span>
          <span class="armorClass">1</span>
          <span class="attackClass">9</span>
          <span class="defenseClass">3</span>
          <span class="speedClass">5</span>
        </div>
      </div>
      <div class="slot" id="feet_slot">
        <h5>Swift Tread</h5>
        <img src=" ../assets/images/items/boots/boots1.png">
        <div class="card-values">
          <span class="healthClass">3</span>
          <span class="armorClass">2</span>
          <span class="attackClass">1</span>
          <span class="defenseClass">1</span>
          <span class="speedClass">7</span>
        </div>
      </div>
      <div class="slot" id="melee_slot">
        <h5>Sword of Gary</h5>
        <img src="../assets/images/items/weapons/sword3.png">
        <div class="card-values">
          <span class="healthClass">1</span>
          <span class="armorClass">1</span>
          <span class="attackClass">10</span>
          <span class="defenseClass">3</span>
          <span class="speedClass">8</span>
        </div>
      </div>
      <div class="slot" id="shield_slot">
        <h5>Bug Defender</h5>
        <img src="../assets/images/items/shields/shield2.png">
        <div class="card-values">
          <span class="healthClass">7</span>
          <span class="armorClass">7</span>
          <span class="attackClass">1</span>
          <span class="defenseClass">5</span>
          <span class="speedClass">1</span>
        </div>
      </div>
    </div>


    <!--inventory-->
    <div class="card-inventory">
      <h1>Helmets</h1>
      <div class="card-item item drag head" draggable="=true">
        <h5>Iron Bucket</h5>
        <img src="../assets/images/items/helmets/helmet1.png">
        <div class="card-values">
          <span class="healthClass">6</span>
          <span class="armorClass">6</span>
          <span class="attackClass">2</span>
          <span class="defenseClass">7</span>
          <span class="speedClass">1</span>
        </div>
      </div>
      <div class="item drag head" draggable="true">
        <h5>Cobalt Crown</h5>
        <img src="../assets/images/items/helmets/helmet2.png">
        <div class="card-values">
          <span class="healthClass">10</span>
          <span class="armorClass">8</span>
          <span class="attackClass">4</span>
          <span class="defenseClass">9</span>
          <span class="speedClass">3</span>
        </div>
      </div>
      <div class="item drag head" draggable="true">
        <h5>Cranium Big</h5>
        <img src="../assets/images/items/helmets/helmet3.png">
        <div class="card-values">
          <span class="healthClass">5</span>
          <span class="armorClass">3</span>
          <span class="attackClass">7</span>
          <span class="defenseClass">1</span>
          <span class="speedClass">10</span>
        </div>
      </div>
      <div class="item drag head" draggable="true">
        <h5>Crusader Helm</h5>
        <img src="../assets/images/items/helmets/helmet4.png">
        <div class="card-values">
          <span class="healthClass">3</span>
          <span class="armorClass">4</span>
          <span class="attackClass">4</span>
          <span class="defenseClass">1</span>
          <span class="speedClass">4</span>
        </div>
      </div>
      <div class="item noDrag head" draggable="true">
        <h5>Viking Helm</h5>
        <img src="../assets/images/items/helmets/helmet5.png">
        <div class="card-values">
          <span class="healthClass">10</span>
          <span class="armorClass">9</span>
          <span class="attackClass">1</span>
          <span class="defenseClass">9</span>
          <span class="speedClass">7</span>
        </div>
      </div>
    </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
